def dockerImageServer
def dockerImageClient

pipeline {
    agent any

    triggers {
        pollSCM('H/5 * * * *')
    }

    environment {
        DOCKERHUB_CREDENTIALS_ID = 'dockerhub-creds'
        IMAGE_NAME_SERVER = 'rahmaaribi/mern-server'
        IMAGE_NAME_CLIENT = 'rahmaaribi/mern-client'
        TRIVY_CACHE = 'C:\\Users\\Public\\trivy-cache' // local cache folder on Windows
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Server Image') {
            steps {
                dir('server') {
                    script {
                        dockerImageServer = docker.build("${IMAGE_NAME_SERVER}:latest")
                    }
                }
            }
        }

        stage('Build Client Image') {
            steps {
                dir('client') {
                    script {
                        dockerImageClient = docker.build("${IMAGE_NAME_CLIENT}:latest")
                    }
                }
            }
        }

        stage('Scan Server Image') {
            steps {
                script {
                    bat """
                    docker run --rm ^
                    -v ${TRIVY_CACHE}:/root/.cache/ ^
                    aquasec/trivy:latest ^
                    image --timeout 5m --exit-code 0 --severity LOW,MEDIUM,HIGH,CRITICAL ${IMAGE_NAME_SERVER}:latest
                    """
                }
            }
        }

        stage('Scan Client Image') {
            steps {
                script {
                    bat """
                    docker run --rm ^
                    -v ${TRIVY_CACHE}:/root/.cache/ ^
                    aquasec/trivy:latest ^
                    image --timeout 5m --exit-code 0 --severity LOW,MEDIUM,HIGH,CRITICAL ${IMAGE_NAME_CLIENT}:latest
                    """
                }
            }
        }

        stage('Push Images to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('', DOCKERHUB_CREDENTIALS_ID) {
                        dockerImageServer.push('latest')
                        dockerImageClient.push('latest')
                    }
                }
            }
        }
    }

    post {
        always {
            echo "üßπ Nettoyage des images et conteneurs Docker..."
            bat """
            echo Suppression des conteneurs stopp√©s...
            docker container prune -f

            echo Suppression des images inutilis√©es...
            docker image prune -a -f

            echo Suppression des volumes inutilis√©s...
            docker volume prune -f

            echo Nettoyage termin√© !
            """
        }
    }
}
